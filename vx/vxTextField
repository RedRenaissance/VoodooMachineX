///////////////////////////////////////////////////////////////////////////////////////
vxTextFieldIncluded = false;
///////////////////////////////////////////////////////////////////////////////////////
function vxTextField(_str_, _x_, _y_, _w_, _h_)
{
	this.vxType		= "vxTextField";
	this.hwnd		= null;
	this.font		= null;
	this.style		= null;
	this.parentHwnd	= null;
	this.str 		= new String(_str_?_str_:"");
	//this.id 		= _id_?	_id_:	0;
	this.id			= vxUniqueNumber();
	this.x 			= _x_?	_x_:	0;
	this.y 			= _y_?	_y_:	0;
	this.width 		= _w_?	_w_:	100;
	this.height 	= _h_?	_h_:	60;
	return;
}
///////////////////////////////////////////////////////////////////////////////////////
vxTextField.prototype.getText = function(_tfn_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxTextField.getText");
	
	_gtx_ = _vx_alloc_(_tfn_?_tfn_:_vx_maxbuff_);
	_vxw_send_message_(this.hwnd, 0x000D, (_tfn_?_tfn_:_vx_maxbuff_), _gtx_);
	this.str = _vx_get_string_(_gtx_);
	_vx_free_(_gtx_);
	return this.str;
}
///////////////////////////////////////////////////////////////////////////////////////
vxTextField.prototype.setText = function(_str_, _tfn_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxTextField.setText");
	
	this.str = _str_?_str_:"";
	_stx_ = _vx_alloc_(_tfn_?_tfn_:(_vx_maxbuff_));
	_vx_put_string_(_stx_, this.str);
	_vxw_send_message_(this.hwnd, 0x000C, 0, _stx_);
	_vx_free_(_stx_);
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxTextField.prototype.setFont = function(_w_, _h_, _str_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxTextField.setFont");
	
	this.font = _vxw_create_font_((_h_?_h_:18),
									(_w_?_w_:9),
									(_str_?new String(_str_):"courier new"));
	_vxw_send_message_(this.hwnd, 0x0030, this.font, true);
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxTextField.prototype.setStyle = function(_style_)
{
	this.style = _style_;
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxTextFieldIncluded = true;
///////////////////////////////////////////////////////////////////////////////////////