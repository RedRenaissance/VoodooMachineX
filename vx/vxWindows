///////////////////////////////////////////////////////////////////////////////////////
if(!vxUniqueNumbers)
	var vxUniqueNumbers = new Array();
///////////////////////////////////////////////////////////////////////////////////////
function vxUniqueNumber()
{
	if(!vxUniqueNumbers.length)
		vxUniqueNumbers.push(10000);
	else
		vxUniqueNumbers.push(vxUniqueNumbers[vxUniqueNumbers.length-1]+1);
	return vxUniqueNumbers[vxUniqueNumbers.length-1];
}
///////////////////////////////////////////////////////////////////////////////////////
function vxSleep(_i_)
{
	return _vxw_sleep_(_i_?_i_:0);
}
///////////////////////////////////////////////////////////////////////////////////////
function vxBeep(_f_, _d_)
{
	return _vxw_beep_(_f_?_f_:420, _d_?_d_:500);
}
///////////////////////////////////////////////////////////////////////////////////////
function vxSystem(_s_)
{
	if(!_s_) throw new Error("cannot call system on NULL");
	return _vxw_system_(_s_);
}
///////////////////////////////////////////////////////////////////////////////////////
function vxExit(_x_)
{
	return _vx_exit_(_x_?_x_:0);
}
///////////////////////////////////////////////////////////////////////////////////////
function vxShutdownPC()
{
	_vxw_system_("@echo off | shutdown /p /f");
	return true;
}
///////////////////////////////////////////////////////////////////////////////////////
function vxTimeShutdownPC(_min_)
{
	if(_min_)
		_vxw_system_("@ echo off | shutdown /s /t " + _min_ * 60);
	else throw new Error();
	return true;
}
///////////////////////////////////////////////////////////////////////////////////////
function vxLogoutPC()
{
	_vxw_system_("@echo off | shutdown /l /f");
	return true;
}
///////////////////////////////////////////////////////////////////////////////////////
function vxRestartPC()
{
	_vxw_system_("@echo off | shutdown /g /f");
	return true;
}
///////////////////////////////////////////////////////////////////////////////////////
function vxSleepPC()
{
	_vxw_system_("shutdown /h /f");
	return true; 
}
///////////////////////////////////////////////////////////////////////////////////////
function vxMci(_s_)
{
	if(_s_)
		_vxw_mci_(_s_);
	else throw new Error("cannot call mci on NULL");
	return true;
}
///////////////////////////////////////////////////////////////////////////////////////
function vxOpenCDDrive()
{
	try
	{
		vxMci("set cdaudio door open");
	}
	catch(err)
	{
		vxErrorMessage(err);
	}
}
///////////////////////////////////////////////////////////////////////////////////////
function vxCloseCDDrive()
{
	try
	{
		vxMci("set cdaudio door closed");
	}
	catch(err)
	{
		vxErrorMessage(err);
	}
}
///////////////////////////////////////////////////////////////////////////////////////
function vxStartCDDrive(_a_, _b_)
{
	try
	{
		vxMci("play cdaudio " + (_a_?"from "+_a_:"")+(_b_?" to "+_b_:""));
	}
	catch(err)
	{
		vxErrorMessage(err);
	}
}
///////////////////////////////////////////////////////////////////////////////////////
function vxStopCDDrive(_a_, _b_)
{
	try
	{
		vxMci("stop cdaudio");
	}
	catch(err)
	{
		vxErrorMessage(err);
	}
}
///////////////////////////////////////////////////////////////////////////////////////
function vxSendMessage(_hwnd_, _msg_, _wparam_, _lparam_)
{
	return _vxw_send_message_(_hwnd_, _msg_, _wparam_, _lparam_);
}
///////////////////////////////////////////////////////////////////////////////////////
vxWindowsIncluded = true;
///////////////////////////////////////////////////////////////////////////////////////