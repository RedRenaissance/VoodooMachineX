const vxPaint 				= 0x0000000F;
const vxShowWindow 			= 0x00000018;
const vxCommand 			= 0x00000111;
const vxClose 				= 0x00000010;
const vxSize 				= 0x00000005;
const vxDestroy 			= 0x00000002;
const vxNCDestroy			= 0x00000082;
const vxCreate 				= 0x00000001;
const vxChar 				= 0x00000102;
const vxKeyDown				= 0x00000100;
const vxKeyUp				= 0x00000101;
const vxRButtonDown 		= 0x00000204;
const vxRButtonUp 			= 0x00000205;
const vxLButtonDown 		= 0x00000201;
const vxLButtonUp 			= 0x00000202;
const vxVisible				= 0x10000000;
const vxChild				= 0x40000000;
