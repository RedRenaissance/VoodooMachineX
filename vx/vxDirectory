////////////////////////////////////////////////////////////////////////////////////////
//
//		A simple directory object that does directory related operations.
//
////////////////////////////////////////////////////////////////////////////////////////
vxDirectoryIncluded = false;
////////////////////////////////////////////////////////////////////////////////////////
function vxDirectory(_d_)
{
	this.vxType = "vxMemory";
	this.dir = _d_?_d_:null;
}
////////////////////////////////////////////////////////////////////////////////////////
vxDirectory.prototype.create = function(_d_)
{
	if(_d_)
	{
		_vxw_create_directory_(_d_);
		return this;
	}
	else if(this.dir)
	{
		_vxw_create_directory_(this.dir);
		return this;
	}
	else return null;
}
////////////////////////////////////////////////////////////////////////////////////////
vxDirectory.prototype.destroy = function(_d_)
{
	if(_d_)
	{
		_vxw_delete_directory_(_d_);
		return this;
	}
	else if(this.dir)
	{
		_vxw_delete_directory_(this.dir);
		return this;
	}
	else return null;
}
////////////////////////////////////////////////////////////////////////////////////////
vxDirectoryIncluded = true;
////////////////////////////////////////////////////////////////////////////////////////