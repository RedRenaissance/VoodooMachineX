///////////////////////////////////////////////////////////////////////////////////////
vxDialogIncluded = false;
///////////////////////////////////////////////////////////////////////////////////////
//if(!vxWindowsIncluded)
vxInclude("C:\\vx\\vxWindows");
///////////////////////////////////////////////////////////////////////////////////////
function vxDialog(_capt_, _str_, _style_)
{
	if(_capt_ == vxSave)
	{
		var _ret_ = _vxw_savefiledialog_(_str_?_str_:"");
		this.result = _ret_?_ret_.replace(/\\/g, "\\\\"):null;
	}
	else if(_capt_ == vxOpen)
	{
		var _ret_ = _vxw_openfiledialog_(_str_?_str_:"");
		this.result = _ret_?_ret_.replace(/\\/g, "\\\\"):null;
	}
	else
	{
		this.result = _vxw_dialog_((_capt_?_capt_:new String()),
							(_str_?_str_:new String()),
							(_style_?_style_:vxOk));
	}
	return this.result;
}
///////////////////////////////////////////////////////////////////////////////////////
vxDialog.prototype.yesClicked = function()
{
	return this.result == 6;
}
///////////////////////////////////////////////////////////////////////////////////////
vxDialog.prototype.noClicked = function()
{
	return this.result == 7;
}
///////////////////////////////////////////////////////////////////////////////////////
vxDialog.prototype.cancelClicked = function()
{
	return this.result == 2;
}
///////////////////////////////////////////////////////////////////////////////////////
vxDialogIncluded = true;
///////////////////////////////////////////////////////////////////////////////////////
