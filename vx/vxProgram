////////////////////////////////////////////////////////////////////////////////////////
//
//		A Handy wrapper for a virtual 'program'
//		using the vxFile and vxProcess objects.
//		That is, a 'program' consits of its own file,
//		and is per definition run as a seperate thread.
//
////////////////////////////////////////////////////////////////////////////////////////
vxProgramIncluded = false;
////////////////////////////////////////////////////////////////////////////////////////
vxInclude("C:\\vx\\vxProcess");
vxInclude("C:\\vx\\vxFile");
////////////////////////////////////////////////////////////////////////////////////////
function vxProgram(_f_)
{
	this.vxType = "vxProgram";
	this.file = _f_.vxType == "vxFile"?
				_f_ : new vxFile(_f_);
	this.proc = new vxProcess();
	this.proc.passString("vxProgramDir", this.file.dir);
	this.proc.loadup(this.file.open().getText());
}
////////////////////////////////////////////////////////////////////////////////////////
vxProgram.prototype.exists = function()
{
	return (this.proc != null);
}
////////////////////////////////////////////////////////////////////////////////////////
vxProgram.prototype.run = function()
{
	return this.proc.run();
}
////////////////////////////////////////////////////////////////////////////////////////
vxProgramIncluded = true;
////////////////////////////////////////////////////////////////////////////////////////