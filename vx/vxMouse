////////////////////////////////////////////////////////////////////////////////////////
//
//		An object that simulates mouse input.
//
////////////////////////////////////////////////////////////////////////////////////////
vxMouseIncluded = false;
////////////////////////////////////////////////////////////////////////////////////////
function vxMouse()
{
	this.vxType = "vxMemory";
	this.down = false;
	
	this.codeLeftDown = 0x0002;
	this.codeLeftUp = 0x0004;
	this.codeMiddleDown = 0x0020;
	this.codeMiddleUp = 0x0040;
	this.codeMoveEvent = 0x0001;
	this.codeRightDown = 0x0008;
	this.codeRightUp = 0x0010;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.event = function(event, x, y)
{
	_vxw_mouse_event_(event, x, y);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.move = function(x, y)
{
	_vxw_mouse_event_(this.codeMoveEvent, x, y);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.rightDown = function()
{
	_vxw_mouse_event_(this.codeRightDown, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.rightUp = function()
{
	_vxw_mouse_event_(this.codeRightUp, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.rightClick = function()
{
	_vxw_mouse_event_(this.codeRightDown, 0, 0);
	_vxw_mouse_event_(this.codeRightUp, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.leftDown = function()
{
	_vxw_mouse_event_(this.codeLeftDown, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.leftUp = function()
{
	_vxw_mouse_event_(this.codeLeftUp, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouse.prototype.leftClick = function()
{
	_vxw_mouse_event_(this.codeLeftDown, 0, 0);
	_vxw_mouse_event_(this.codeLeftUp, 0, 0);
	return;
}
////////////////////////////////////////////////////////////////////////////////////////
vxMouseIncluded = true;
////////////////////////////////////////////////////////////////////////////////////////