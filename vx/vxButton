///////////////////////////////////////////////////////////////////////////////////////
vxButtonIncluded = false;
///////////////////////////////////////////////////////////////////////////////////////
function vxButton(_str_, _x_, _y_, _w_, _h_)
{
	this.vxType		= "vxButton";
	this.hwnd		= null;
	this.font		= null;
	this.style		= null;
	this.parentHwnd	= null;
	this.str 		= new String(_str_?_str_:"");
	//this.id 		= _id_?	_id_:	0;
	this.id			= vxUniqueNumber();
	this.x 			= _x_?	_x_:	0;
	this.y 			= _y_?	_y_:	0;
	this.width 		= _w_?	_w_:	80;
	this.height 	= _h_?	_h_:	25;
	return;
}
///////////////////////////////////////////////////////////////////////////////////////
vxButton.prototype.isActivated = function()
{
	return (_vxw_hwnd_() == this.parentHwnd)&&
			(_vxw_wparam_() == this.id);
}
///////////////////////////////////////////////////////////////////////////////////////
vxButton.prototype.getText = function(_n_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxButton.getText");
	
	_x_ = _vx_alloc_(_n_?_n_:1024);
	_vxw_send_message_(this.hwnd, 0x000D, (_n_?_n_:1024), _x_);
	this.str = _vx_get_string_(_x_);
	_vx_free_(_x_);
	return this.str;
}
///////////////////////////////////////////////////////////////////////////////////////
vxButton.prototype.setText = function(_str_, _n_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxButton.setText");
	
	this.str = _str_?_str_:"";
	_x_ = _vx_alloc_(_n_?_n_:1024);
	_vx_put_string_(_x_, this.str);
	_vxw_send_message_(this.hwnd, 0x000C, 0, _x_);
	_vx_free_(_x_);
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxButton.prototype.setFont = function(_w_, _h_, _str_)
{
	if(!this.hwnd)
		throw new Error("no window handle found in vxButton.setFont");
	
	this.font = _vxw_create_font_((_h_?_h_:18),
									(_w_?_w_:9),
									(_str_?new String(_str_):"courier new"));
	_vxw_send_message_(this.hwnd, 0x0030, this.font, true);
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxButton.prototype.setStyle = function(_style_)
{
	this.style = _style_;
	return this;
}
///////////////////////////////////////////////////////////////////////////////////////
vxButtonIncluded = true;
///////////////////////////////////////////////////////////////////////////////////////